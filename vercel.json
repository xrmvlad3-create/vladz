{
  "version": 2,
  "name": "izamanagement-preview",
  "public": true,
  "builds": [
    { "src": "public/preview/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/$", "dest": "public/preview/index.html" },
    { "src": "/health", "dest": "public/preview/health.txt" },
    { "src": "/app$", "dest": "public/preview/app.html" },
    { "src": "/code$", "dest": "public/preview/code.html" },
    { "src": "/preview$", "dest": "public/preview/index.html" },
    { "src": "/preview/(.*)", "dest": "public/preview/$1" },
    { "src": "/(.*)", "dest": "public/preview/$1" }
  ]
}