APP_NAME="IzaManagement"
APP_ENV=production
APP_KEY=base64:your_app_key_here_generate_with_artisan
APP_DEBUG=false
APP_URL=https://izamanagement.ro
APP_TIMEZONE=Europe/Bucharest
APP_LOCALE=ro
APP_FALLBACK_LOCALE=en

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=izamanagement
DB_USERNAME=izauser
DB_PASSWORD=secure_password_2025

BROADCAST_DRIVER=redis
CACHE_DRIVER=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=your_mailtrap_username
MAIL_PASSWORD=your_mailtrap_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@izamanagement.ro
MAIL_FROM_NAME="${APP_NAME}"

# AI Service Configuration
GROQ_API_KEY=gsk_your_actual_groq_api_key_here
GROQ_BASE_URL=https://api.groq.com/openai/v1
GROQ_DEFAULT_MODEL=llama-3.1-70b-versatile
GROQ_TIMEOUT=60
GROQ_MAX_TOKENS=2000

OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_DEFAULT_MODEL=llama3.1:8b
OLLAMA_TIMEOUT=120

# Security
SANCTUM_STATEFUL_DOMAINS=izamanagement.ro,localhost,127.0.0.1
SESSION_DOMAIN=.izamanagement.ro
CORS_ALLOWED_ORIGINS=https://izamanagement.ro

# Search Engine
SCOUT_DRIVER=meilisearch
MEILISEARCH_HOST=http://meilisearch:7700

# Monitoring
TELESCOPE_ENABLED=true
HORIZON_ENABLED=true

# Analytics
GOOGLE_ANALYTICS_ID=GA4-YOUR-ID
MIXPANEL_TOKEN=your_mixpanel_token

# Storage
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_DEFAULT_REGION=eu-west-1
AWS_BUCKET=izamanagement-assets
AWS_USE_PATH_STYLE_ENDPOINT=false

# CDN
CDN_URL=https://cdn.izamanagement.ro

# Rate Limiting
RATE_LIMIT_API=100
RATE_LIMIT_WEB=60
RATE_LIMIT_AI=30

# Two-Factor Authentication
TWO_FACTOR_ISSUER="${APP_NAME}"

# Medical Data
MEDICAL_DATA_ENCRYPTION_KEY=your_medical_data_encryption_key
GDPR_COMPLIANCE_MODE=strict
AUDIT_RETENTION_DAYS=2555  # 7 years
