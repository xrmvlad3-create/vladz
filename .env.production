APP_NAME="IzaManagement"
APP_ENV=production
APP_KEY=

APP_DEBUG=false
APP_URL=http://localhost

LOG_CHANNEL=stack
LOG_LEVEL=info

# Database
DB_CONNECTION=pgsql
